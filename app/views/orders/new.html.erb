<h1 class="order-title">Оформлення замовлення</h1>


<%= form_with model: @order, url: orders_path, method: :post, class: 'order-form' do |f| %>
  <div class="form-group">
    <h3 class="delivery-method-title">Оберіть спосіб доставки:</h3>
    <%= f.select :delivery_method, Order::DELIVERY_METHODS, {}, class: 'form-control delivery-method-select' %>
  </div>

  <div class="form-group">
    <%= f.label :delivery_address, "Адреса доставки", class: "delivery-method-title"%><br>
    <%= f.text_field :delivery_address, class: 'form-control delivery-method-select' %>
  </div>

  <div class="form-group">
    <h3 class="total-price-title">Загальна сума: <%= number_to_currency(@cart.total_price, unit: '₴') %></h3>
  </div>


  <div class="form-group">
    <%= f.submit 'Перейти до оплати', class: 'btn btn-submit' %>
  </div>
<% end %>
