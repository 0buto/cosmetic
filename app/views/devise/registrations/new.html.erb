<h2>Реєстрація</h2>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, autocomplete: 'new-password', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: 'form-label' %>
    <%= form.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Зареєструватися', class: 'btn-submit' %>
  </div>

  <div class="form-links">
    <%= link_to 'Вже маєте акаунт? Увійдіть!', new_user_session_path, class: 'form-link' %>
  </div>
<% end %>
