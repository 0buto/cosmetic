<h2>Вхід</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, autocomplete: 'current-password', class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Увійти', class: 'btn-submit' %>
  </div>

  <div class="form-links">
    <%= link_to 'Забули пароль?', new_user_password_path, class: 'form-link' %>
    <%= link_to 'Не маєте акаунта? Зареєструйтесь!', new_user_registration_path, class: 'form-link' %>
  </div>
<% end %>

